## for GNOME desktop

# disable lockscreen
org.gnome.desktop.lockdown.disable-lock-screen = true
org.gnome.desktop.screensaver.ubuntu-lock-on-suspend = false
org.gnome.desktop.screensaver.lock-delay = 0
org.gnome.desktop.screensaver.lock-enabled = false
org.gnome.desktop.screensaver.logout-delay = 0
org.gnome.desktop.screensaver.logout-enabled = false
org.gnome.settings-daemon.plugins.media-keys.screensaver = ''

# show appmenu on windows, show images on buttons and in menus
org.gnome.settings-daemon.plugins.xsettings.overrides = "{'Gtk/ShellShowsAppMenu': <0>, 'Gtk/ButtonImages': <1>, 'Gtk/MenuImages': <1>}"

